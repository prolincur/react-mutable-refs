{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "globals":{
        "JSX":"readonly"
    },
    "rules": {
        "no-use-before-define": "off",
        "no-shadow": "off",
        "react/forbid-prop-types": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never",
                "tsx": "never",
                "jsx": "never",
                "js": "never"
            }
        ],
        "react/jsx-filename-extension": [1,
            {
                "extensions": [".jsx"]
            }
        ],
        "arrow-body-style": ["error", "as-needed"],
        "no-console": ["error", { "allow": ["log", "debug", "warn", "error"] }],
        "import/prefer-default-export": "off",
        "react/jsx-props-no-spreading": ["off", { "ignore": ["html", "custom"] }],
        "import/no-unresolved": "warn"
    }
}